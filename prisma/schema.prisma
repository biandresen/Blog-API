generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum FeatureType {
  DAILY_JOKE
  TOP_CREATOR_MONTH
  TRENDING_WEEK
  MOST_COMMENTED_WEEK
  FASTEST_GROWING
}

enum BadgeKey {
  ADMIN
  TOP_CREATOR_MONTH
  JOKE_OF_DAY
  TRENDING_WEEK
  MOST_COMMENTED_WEEK
  FASTEST_GROWING
  STREAK
}

model BadgeAward {
  id        String   @id @default(uuid())
  userId    Int
  badge     BadgeKey
  awardedAt DateTime @default(now())
  validFrom DateTime?
  validTo   DateTime?
  context   Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badge, validFrom])
  @@index([userId, awardedAt])
  @@index([badge, awardedAt])
}

model CurrentUserBadge {
  id      String   @id @default(uuid())
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int

  badge   BadgeKey
  since   DateTime @default(now())
  validTo DateTime?
  context Json?

  @@unique([userId, badge])
  @@index([badge])
}


model FeaturedPost {
  id        Int         @id @default(autoincrement())
  type      FeatureType
  date      DateTime    // store day as midnight UTC
  postId    Int
  post      BlogPost    @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime    @default(now())

  @@unique([type, date])
  @@index([date])
  @@index([postId])
}

model User {
  id                  Int                  @id @default(autoincrement())
  username            String               @unique
  email               String               @unique
  password            String
  avatar              String?
  active              Boolean              @default(true)
  role                Role                 @default(USER)
  blogPosts           BlogPost[]
  comments            Comment[]
  likes               PostLike[]
  refreshTokens       RefreshToken[]
  createdAt           DateTime             @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt           DateTime?
  resetPasswordTokens ResetPasswordToken[]
  termsAcceptedAt     DateTime?
  termsVersion        String?
  dailyJokeStreak     Int                  @default(0)
  dailyJokeLastViewedAt DateTime?
  dailyJokeBestStreak Int                  @default(0)
  currentBadges CurrentUserBadge[]
  badgeAwards   BadgeAward[]
}

model BlogPost {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [authorId], references: [id])
  authorId  Int
  title     String
  body      String
  published Boolean    @default(false)
  comments  Comment[]
  likes     PostLike[]
  tags      Tag[]      @relation("PostTags")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt

  featuredIn FeaturedPost[]
}


model Comment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [authorId], references: [id])
  authorId  Int
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([postId, createdAt])
}

model Tag {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  posts     BlogPost[] @relation("PostTags")
  createdAt DateTime   @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  token     String
  issuedAt  DateTime
  expiresAt DateTime
  userAgent String?
  ipAddress String?
}

model ResetPasswordToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  token     String   @unique
  issuedAt  DateTime
  expiresAt DateTime
  userAgent String?
  ipAddress String?
}

model PostLike {
  postId    Int
  userId    Int
  createdAt DateTime @default(now())

  post BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId, createdAt])
  @@index([userId, createdAt])
}
